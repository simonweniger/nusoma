{
  "name": "nusoma",
  "version": "0.0.0",
  "bin": {
    "next-forge": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "build": "turbo run build && cd packages/database && bun run db:push",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "git clean -xdf node_modules dist .next",
    "format": "bunx biome format --write .",
    "format:check": "bunx biome format .",
    "lint": "bunx biome check --write --unsafe .",
    "lint:check": "bunx biome check --unsafe .",
    "check": "bunx biome check --files-ignore-unknown=true",
    "translate": "turbo translate",
    "prepare": "bun husky",
    "prebuild": "bun run lint:check",
    "analyze": "turbo analyze --cache-dir=.turbo",
    "boundaries": "turbo boundaries",
    "postinstall": "manypkg fix",
    "syncpack:list": "bunx syncpack list-mismatches",
    "syncpack:fix": "bunx syncpack fix-mismatches",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/auth/stripe/webhook",
    "local:db:reset": "cd packages/database && bunx supabase db reset",
    "local:db:seed": "cd packages/database && bunx supabase db seed",
    "local:db:start": "cd packages/database && bunx supabase start",
    "local:db:stop": "cd packages/database && bunx supabase stop",
    "local:db:status": "cd packages/database && bunx supabase status",
    "db:push": "cd packages/database && bun run db:push",
    "db:generate": "cd packages/database && bun run db:generate",
    "docker:build": "docker build -f docker/app.Dockerfile -t nusoma-app .",
    "docker:run": "docker run -p 3000:3000 --env-file .env nusoma-app"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@clack/prompts": "^0.11.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@manypkg/cli": "0.23.0",
    "@next/env": "^15.3.2",
    "@t3-oss/env-nextjs": "^0.13.4",
    "@turbo/gen": "^2.5.0",
    "@types/node": "22.15.21",
    "@vercel/analytics": "^1.5.0",
    "commander": "^14.0.0",
    "husky": "^9.1.7",
    "lint-staged": "16.0.0",
    "tsup": "^8.5.0",
    "turbo": "2.5.4",
    "typescript": "^5.8.3",
    "ultracite": "^4.2.5",
    "vitest": "3.1.4"
  },
  "engines": {
    "bun": ">=1.2.13"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "biome check --files-ignore-unknown=true"
    ]
  },
  "overrides": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "prettier": "3.5.3"
  },
  "packageManager": "bun@1.2.13",
  "private": true,
  "trustedDependencies": [
    "core-js-pure",
    "unrs-resolver"
  ],
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
