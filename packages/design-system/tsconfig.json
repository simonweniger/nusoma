{
  "extends": "@nusoma/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@nusoma/*": ["../*"],
      "@nusoma/design-system/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../apps/nusoma/app/(dashboard)/workspace/components/shared/tag-dropdown.tsx",
    "../../apps/nusoma/app/(dashboard)/workspace/components/shared/tag-dropdown.test.tsx",
    "../../apps/nusoma/components/workspace-modals.tsx"
  ],
  "exclude": ["node_modules"]
}
