{
  "extends": "@nusoma/typescript-config/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@nusoma/*": ["../../packages/*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["./lib/*"],
      "@/stores": ["./stores"],
      "@/stores/*": ["./stores/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/blocks": ["./blocks"],
      "@/blocks/*": ["./blocks/*"],
      "@/providers/*": ["./providers/*"],
      "@/providers": ["./providers"],
      "@/tools": ["./tools"],
      "@/data": ["./data/*"],
      "@/data/*": ["./data/*"],
      "@/tools/*": ["./tools/*"],
      "@/serializer": ["./serializer"],
      "@/serializer/*": ["./serializer/*"],
      "@/executor": ["./executor"],
      "@/executor/*": ["./executor/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/database/index.ts",
    "../../packages/database/schema.ts",
    "../../packages/database/utils.ts",
    "../../packages/database/drizzle.config.ts",
    "../../packages/design-system/components/theme-toggle.tsx",
    "../../packages/design-system/components/icons.tsx",
    "../../packages/design-system/components/motion-highlight.tsx",
    "../../packages/design-system/components/motion-effect.tsx",
    "app/(dashboard)/workspace/components/sidebar/workspace-modals.tsx"
  ],
  "exclude": ["node_modules"]
}
